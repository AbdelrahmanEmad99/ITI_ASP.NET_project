@model Department

<h1 class="alert alert-warning text-center">
    Create Department
</h1>

<div class="row">
    <form class="col-4" method="post" asp-controller="Departments" asp-action="AddNew" enctype="multipart/form-data">

        <div asp-validation-summary="All" class="text-danger"></div>

        <div>
            @*<label>@Html.DisplayNameFor(e=>e.Name)</label>*@
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            @*<label>@Html.DisplayNameFor(e=>e.Description)</label>*@
            <label asp-for="Description"></label>
            <input type="text" asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>



        <div>
            <button type="submit" class="btn btn-primary mt-1">Add</button>
            <a asp-controller="Departments" asp-action="GetIndexView">Back to List</a>
        </div>
    </form>


</div>

